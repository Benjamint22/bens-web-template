{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "sourceMap": true,
        "rootDir": "./src/scripts",
        "outDir": "./dist/scripts",
        "strict": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts/**/*.test.ts"
    ]
}